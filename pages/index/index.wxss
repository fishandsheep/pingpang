.container {
  width: 100%;
  height: 100vh;
  position: relative;
  background: #f5f5f5;
}

.map {
  width: 100%;
  height: 100%;
}

.map-controls {
  position: absolute;
  right: 20rpx;
  bottom: 200rpx;
  z-index: 100;
}

.location-btn, .refresh-btn {
  width: 88rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.location-btn image, .refresh-btn image {
  width: 40rpx;
  height: 40rpx;
}

.top-bar {
  position: absolute;
  top: 40rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 100;
}

.search-bar {
  height: 88rpx;
  background: #fff;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.6;
}

.search-bar input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  background: transparent;
}

.bottom-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 99;
  max-height: 60vh;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.filter-btn image {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.table-list {
  max-height: 45vh;
  padding: 0 20rpx 20rpx;
}

.table-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: #fafafa;
  border-radius: 20rpx;
  border: 1rpx solid #f0f0f0;
}

.table-info {
  flex: 1;
}

.table-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.table-address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.table-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-free {
  background: #4caf50;
}

.status-busy {
  background: #ff9800;
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

.table-distance {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 20rpx;
}

.table-distance text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.table-distance image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}