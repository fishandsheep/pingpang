.container {
  width: 100%;
  height: 100vh;
  position: relative;
  background: #f5f5f5;
}

.map {
  width: 100%;
  height: 50vh;
  transition: height 0.3s ease;
  position: relative;
  z-index: 1;
}

.map.expanded {
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.map-controls {
  position: absolute;
  right: 20rpx;
  bottom: 120rpx;
  z-index: 100;
  transition: bottom 0.3s ease;
}

.map.expanded .map-controls {
  bottom: 200rpx;
}

.location-btn, .refresh-btn {
  width: 88rpx;
  height: 88rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.location-btn:active, .refresh-btn:active {
  background: #f0f0f0;
  transform: scale(0.95);
}

.location-btn image, .refresh-btn image {
  width: 40rpx;
  height: 40rpx;
  color: #333;
}

.top-bar {
  position: absolute;
  top: 40rpx;
  left: 20rpx;
  right: 20rpx;
  z-index: 100;
}

.search-bar {
  height: 88rpx;
  background: #fff;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  transition: all 0.2s ease;
}

.search-bar:active {
  background: #f8f8f8;
  transform: scale(0.98);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.6;
  color: #666;
}

.search-bar input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  background: transparent;
}

.bottom-panel {
  position: absolute;
  top: 50vh;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
  height: 50vh;
  transition: top 0.3s ease, height 0.3s ease;
}

.bottom-panel.expanded {
  top: 70vh;
  height: 30vh;
}

.bottom-panel.collapsed {
  top: 85vh;
  height: 15vh;
}

.panel-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: grab;
  user-select: none;
}

.panel-header:active {
  cursor: grabbing;
}

.drag-handle {
  width: 80rpx;
  height: 8rpx;
  background: #d0d0d0;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
  transition: background 0.2s ease;
}

.drag-handle:active {
  background: #b0b0b0;
}

.panel-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  background: #f8f8f8;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  transition: all 0.2s ease;
}

.filter-btn:active {
  background: #e8e8e8;
  transform: scale(0.95);
}

.filter-btn .filter-text {
  margin-right: 8rpx;
  font-weight: 500;
}

.filter-btn.filter-active .filter-text {
  color: #4caf50;
}

.filter-btn image {
  width: 24rpx;
  height: 24rpx;
}

.table-list {
  height: calc(100% - 120rpx);
  padding: 0 20rpx 20rpx;
}

.bottom-panel.expanded .table-list {
  height: calc(100% - 120rpx);
}

.bottom-panel.collapsed .table-list {
  height: calc(100% - 120rpx);
  overflow-y: auto;
}

.table-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: #fafafa;
  border-radius: 20rpx;
  border: 1rpx solid #f0f0f0;
}

.table-info {
  flex: 1;
}

.table-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.table-address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.table-status {
  display: flex;
  align-items: center;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.status-free {
  background: #4caf50;
}

.status-busy {
  background: #ff9800;
}

.status-text {
  font-size: 24rpx;
  color: #666;
}

.table-distance {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 20rpx;
}

.table-distance text {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.table-distance image {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}